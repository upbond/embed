{
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "node",
    "strict": false,
    "module": "es6",
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "torus-embed",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "torus-embed"]
}
